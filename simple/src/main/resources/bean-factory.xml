<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--默认调用 无参构造方法 ,单例模式-->
<!--     <bean id="hello" class="simple.application.Hello" scope="single"/> -->
    <bean id="hello" class="simple.application.Hello"/>
    <!-- 每次创建新的对象 -->
    <bean id="hello" class="simple.application.Hello" scope="prototype"/>
    <!--request  -->
    <!--session  -->
    <!-- global session -->
    <!--application  -->
    
    
    <!-- 使用有参构造方法创建 -->
    <bean id="hello1" class="simple.application.Hello">
    	
    	<constructor-arg index="0" value="有参构造方法创建,下标形式"></constructor-arg>
    	
    	<!-- 
    	<constructor-arg name="name" value="有参构造方法创建，name形式"></constructor-arg>
    	 -->
    	 
    	 <!--
    	<constructor-arg type="java.lang.String" value="有参构造方法创建，参数Type形式"></constructor-arg>
    	   -->    	
    </bean>
    
    <!-- 使用静态工厂创建 -->
    <bean id="hello2" class="simple.application.factory.HelloFactory" factory-method="getHello">
    	<constructor-arg name="name" value="使用静态工厂创建的对象"></constructor-arg>
    </bean>
    
    <!--使用动态工厂创建  ,并且为bean设置别名,name可以设置多个别名-->
    <bean id="helloDynamicFactory" class="simple.application.factory.HelloDynamicFactory"></bean>
    <bean id="hello3" name="loser,hehe" factory-bean="helloDynamicFactory" factory-method="getHello">
    	<constructor-arg name="name" value="使用动态工厂创建"></constructor-arg>
    </bean>
    
    <!--设置别名  -->
    <alias name="hello3" alias="star"/> 
    
    
    <!-- 使用LoserHello.class的方式 获取bean-->
    <bean id="loserHello" class="simple.application.LoserHello">
    	<!--使用setter方式注入所依赖的bean,根据name来找  -->
    	<property name="hello" ref="hello2"></property>
    	<!--使用常量注入  -->
    	<property name="string" value="常量注入"></property>
    	<!--数组注入  -->
    	<property name="names">
    		<array>
    			<value>老罗</value>
    			<value>隔壁老王</value>
    			<value>花木兰</value>
    			<value>丫丫丫</value>
    		</array>
    	</property>
    	<!--list注入  -->
    	<property name="list">
    		<list>
    			<value>list1</value>
    			<value>list2</value>
    			<value>list3</value>
    			<value>list4</value>
    		</list>
    	</property>
    	<!--map注入,map3依赖hello3这个使用动态工厂创建的bean  -->
    	<property name="map">
    		<map>
    			<entry key="map1" value="map1vvv"></entry>
    			<entry>
    				<key><value>map2</value></key>
    				<value>map2vvv</value>
    			</entry>
    			<entry key="map3" value-ref="hello3"></entry>
    		</map>   	
    	</property>
    	
    	<!-- set的注入 -->
    	<property name="set">
    		<set>
    			<value>set1</value>
    			<value>set2</value>
    			<value>set3</value>
    			<value>set4</value>
    		</set>
    	</property>
    	
    	
    	<!--null注入  -->
    	<property name="isNull"><null></null></property>
    	
    	
    	<!--properties注入  -->
    	<property name="properties">
    		<props>
    			<prop key="name">老罗头</prop>
    			<prop key="age">35</prop>
    			<prop key="address">大山嘎嘎里</prop>
    		</props>
    	</property>
    </bean>
    
    
    
    <!--使用p，命名空间注入， 头文件加入xmlns:p="http://www.springframework.org/schema/p" -->
    <bean id="loser2" class="simple.application.LoserHello2" p:s1="p命名空间注入1111" p:s2="p命名空间注入22222"></bean>
</beans>